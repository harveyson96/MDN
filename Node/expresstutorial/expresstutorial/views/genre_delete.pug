extends layout 

block content  
    h1 #{title}: #{genre.name}

    if genre_books.length 
        p #[strong Detele the following books before attempting to detele this author.]

        div(style='margin-;eft:20px;margin-top:20px')

            h4 books 

            dl 
            each book in genre_books 
                dt 
                    a(href=book.url)  #{book.title}
                dd #{book.summary}
    else 
        p Do you really want to delete this Genre?

        form(method='POST' action='')
            .from-group 
                input#genreid.form-control(type="hidden", name='genreid', required='true',
                value=genre._id )
            button.btn.btn-primary(type='sumbit') Detele
    